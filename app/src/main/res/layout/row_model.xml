<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/strokeColor"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_rowWeight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="8dp"
        card_view:cardBackgroundColor="@color/strokeColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView

                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/worker_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/user"
                app:civ_border_color="#FFF"
                app:civ_border_width="2dp" />


            <TextView
                android:id="@+id/nametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="24dp"
                android:paddingLeft="10dp"
                android:text="name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/nametxt"
                android:layout_marginBottom="54dp"
                android:paddingLeft="10dp"
                android:text="distance"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/ratingtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/nametxt"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="56dp"
                android:paddingLeft="10dp"
                android:text="rating"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/ratingtxt"
                android:layout_toEndOf="@+id/ratingtxt"
                android:src="@drawable/ic_star_black" />


            <TextView
                android:id="@+id/skill_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/nametxt"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="rating"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:textStyle="bold" />


            <!--<Button-->
                <!--android:id="@+id/book_worker"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_gravity="end"-->
                <!--android:layout_marginEnd="14dp"-->
                <!--android:background="@drawable/button_main_background"-->
                <!--android:elevation="6dp"-->
                <!--android:padding="5dp"-->
                <!--android:text="book worker"-->
                <!--android:textColor="@color/strokeColor" />-->

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>