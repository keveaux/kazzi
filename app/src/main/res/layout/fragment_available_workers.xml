<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.mainFragments.availableWorkers.availableWorkersFragment">


        <TextView
            android:id="@+id/location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/fetching_your_location"
            android:textColor="#000000"
            android:background="#fff"
            />



    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/myprogressbar"
        android:background="@color/strokeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/location"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/location"
        android:background="@color/strokeColor"
      >



        <TextView
            android:id="@+id/noworkertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/noworker"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <ListView
            android:id="@+id/myListView"
            class="android.support.v7.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:divider="@null"
            android:dividerHeight="0dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="99dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/location"
            app:borderWidth="3dp"
            app:backgroundTint="@color/colorPrimary" />

    </FrameLayout>
</LinearLayout>